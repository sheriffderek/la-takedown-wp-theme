
body
  display: flex
  min-height: 100vh
  flex-direction: column
  .page-content
    flex-grow: 1

.page-section
  border: 1px solid red
  inner-column
    display: block // custom elements are inline by default
    width: 98%
    max-width: 1100px
    margin-right: auto
    margin-left: auto
    padding: $pad
    border: 1px solid blue

@media (max-width: 600px)
  .site-header
    padding-top: $pad*2