
// VARIABLES
$black 	= #01060e
$white 	= alpha(white, .95)

$color = #00CDD7 // not really any colors at this time
$color-dark = #027e86

$fast	= .15s
$faster = .75s
$slow = .7s

$pad 	= 10px


// box sizing
html
  box-sizing: border-box
*, *:before, *:after
  box-sizing: inherit

// links reset to inherit styles by default
a //
	display: block
	text-decoration: none
	color: inherit

// cursor reset / stops blinking issues
html,
body
	cursor: default
input[type="text"], textarea, code
	cursor: text
a,
label,
button,
input[type="radio"],
input[type="submit"],
input[type="checkbox"]
	cursor pointer
button[disabled],
input[disabled]
	cursor: default

// icons
[class^="icon-"], [class*=" icon-"]
	display: block
	width: 100%
	height: 100%
	fill: currentColor

figure, picture
	display: block
	img
		display: block
		width: 100%
		height: auto
